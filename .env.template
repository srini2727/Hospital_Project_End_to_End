# Environment Configuration Template
# Copy this file to .env and fill in your local values

# ============================================================================
# MSSQL SOURCE CONNECTIONS (3 Hospital Systems)
# ============================================================================

# Hospital 1 MSSQL Server
MSSQL_HOST_H1=host.docker.internal
MSSQL_PORT_H1=1435
MSSQL_DATABASE_H1=H1_hospital_data
MSSQL_USERNAME_H1=mage_user
MSSQL_PASSWORD_H1=mage_user
MSSQL_DRIVER_H1=ODBC Driver 17 for SQL Server

# Hospital 2 MSSQL Server
MSSQL_HOST_H2=host.docker.internal
MSSQL_PORT_H2=1435
MSSQL_DATABASE_H2=H2_hospital_data
MSSQL_USERNAME_H2=mage_user
MSSQL_PASSWORD_H2=mage_user
MSSQL_DRIVER_H2=ODBC Driver 17 for SQL Server

# Hospital 3 MSSQL Server
MSSQL_HOST_H3=host.docker.internal
MSSQL_PORT_H3=1435
MSSQL_DATABASE_H3=H3_hospital_data
MSSQL_USERNAME_H3=mage_user
MSSQL_PASSWORD_H3=mage_user
MSSQL_DRIVER_H3=ODBC Driver 17 for SQL Server

# ============================================================================
# SNOWFLAKE TARGET WAREHOUSE
# ============================================================================

# Snowflake Account Identifier (e.g., vhystby-od93731)
SNOWFLAKE_ACCOUNT=vhystby-od93731

# Snowflake Authentication
SNOWFLAKE_USER=your_snowflake_user
SNOWFLAKE_PASSWORD=your_snowflake_password
SNOWFLAKE_MFA_ENABLED=false

# Snowflake Database & Warehouse
SNOWFLAKE_DATABASE=HOSPITAL_DATA_DB
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_SCHEMA=HOSPITAL_BRONZE

# Snowflake Role (optional, defaults to user's default role)
SNOWFLAKE_ROLE=TRANSFORMER

# ============================================================================
# MAGE.AI CONFIGURATION
# ============================================================================

# Mage.ai Server
MAGE_SERVER_HOST=localhost
MAGE_SERVER_PORT=6789

# Mage.ai Project
MAGE_PROJECT_NAME=hospital_analytics_pipeline
MAGE_ENVIRONMENT=dev

# ============================================================================
# DBT CONFIGURATION
# ============================================================================

# dbt Profiles Directory (usually ~/.dbt/)
DBT_PROFILES_DIR=~/.dbt/

# dbt Target (dev/prod)
DBT_TARGET=dev

# dbt Threads (parallel execution)
DBT_THREADS=4

# Enable dbt Debug Logging
DBT_DEBUG=false

# ============================================================================
# SNOWFLAKE SCHEMAS (dbt Medallion Layers)
# ============================================================================

# These are created by dbt and correspond to medallion architecture layers
SNOWFLAKE_SCHEMA_BRONZE=HOSPITAL_BRONZE
SNOWFLAKE_SCHEMA_STAGING=HOSPITAL_STAGING
SNOWFLAKE_SCHEMA_SILVER=HOSPITAL_SILVER
SNOWFLAKE_SCHEMA_GOLD=HOSPITAL_GOLD

# ============================================================================
# DEVELOPMENT & LOGGING
# ============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable Verbose Logging
VERBOSE=false

# Local Development Flag
DEV_MODE=true

# ============================================================================
# OPTIONAL: POWER BI CONNECTION (for future integration)
# ============================================================================

# Power BI Service Principal
# POWER_BI_TENANT_ID=your_tenant_id
# POWER_BI_CLIENT_ID=your_client_id
# POWER_BI_CLIENT_SECRET=your_client_secret
# POWER_BI_WORKSPACE_ID=your_workspace_id

# ============================================================================
# NOTES
# ============================================================================

# 1. MSSQL Connections: These default to Docker host (host.docker.internal)
#    For local development (no Docker), use: 127.0.0.1 or localhost
#
# 2. Snowflake Credentials: Use key-pair authentication in production.
#    This template uses password auth for local development only.
#
# 3. NEVER commit .env to Git!
#    .gitignore should include: .env, .env.local, secrets/
#
# 4. Mage.ai expects environment variables at startup.
#    Load before running: source .env && mage start
#
# 5. dbt profiles directory should contain profiles.yml with connection details.
#    Alternative: Use dbt environment variables directly (see dbt docs)
#
# ============================================================================
